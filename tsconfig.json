{
  "compilerOptions": {
    "outDir": "./build/",
    "sourceMap": true,
    "module": "CommonJS",
    "target": "es5",
    "removeComments": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "allowJs": true,
    "alwaysStrict": true,
    "diagnostics": true,
    "lib": [
      "DOM",
      "ES5",
      "ScriptHost"
    ]
  },
  "include": [
    "./src/**/*"
  ]
}
